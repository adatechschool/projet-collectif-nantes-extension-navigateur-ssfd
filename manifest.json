{
  "manifest_version": 3,
  "name": "Zen Plugin",
  "version": "1.0",
  "description": "Zenify your life !",
  "icons": {
    "64": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "icon.png"
    }
  },  
  "background": {
    "service_worker": "background.js"
},
  "permissions": ["scripting", "activeTab"]
}
